<div class="container py-4">
    <div class="row justify-content-center">
        <!-- メインコンテナの幅設定 -->
        <div class="col-12 col-md-8 col-lg-6">

            <!-- フォームカード -->
            <div class="card shadow-lg mb-4 rounded-3 border-info">
                <div class="card-header bg-info text-white p-3">
                    <h2 class="h5 mb-0 fw-bold">カテゴリ詳細</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <div class="form-control form-control-lg">
                            カテゴリ名：<%= @receipt_category.name %>
                        </div>
                        <div class="form-control form-control-lg">
                            説明：<%= @receipt_category.description %>
                        </div>
                        <div class="form-control form-control-lg">
                            <%= @receipt_category.description ? "食関連" : "食関連ではない" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

